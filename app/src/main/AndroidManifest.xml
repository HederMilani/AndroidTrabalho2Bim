<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trabalho2bimestre">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidTrabalho2Bim">
        <activity
            android:name="com.example.androidtrabalho2bim.ui.main.DetalhePessoa"
            android:exported="false" />
        <activity
            android:name="com.example.androidtrabalho2bim.SplashScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AndroidTrabalho2Bim.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.androidtrabalho2bim.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.AndroidTrabalho2Bim.NoActionBar" />
    </application>

</manifest>